{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "/static/schemas/auth/user/self-cert.json",
    "title": "Self-Signed User Certificate Schema",
    "type": "object",
    "properties": {
        "package": {
            "type": "object",
            "properties": {
                "origin": {
                    "type": "string",
                    "format": "uri"
                },
                "keys": {
                    "description": "User public keypair",
                    "$ref": "/static/schemas/auth/keypair.json"
                },
                "profile": {
                    "$ref": "/static/schemas/auth/user/profile.json"
                }
            }
        },
        "sig": {
            "type": "string",
            "format": "base64"
        }
    }
}